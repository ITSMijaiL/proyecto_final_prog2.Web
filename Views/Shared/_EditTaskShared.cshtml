@model proyecto_final_prog2.Infrastructure.Models.TaskModel

<div class="row">
    <div class="form-group">
        <label asp-for="title" id="name">Nombre de la etiqueta:</label>
        <input asp-for="title" class="form-control" value="@ViewData["current_title"]"/>
        <span asp-validation-for="title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="text" id="name">Texto:</label>
        <input asp-for="text" class="form-control" value="@ViewData["current_text"]" />
        <span asp-validation-for="text" class="text-danger"></span>
    </div>
</div>
